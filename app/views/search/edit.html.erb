<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Edit threat</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissible" role="alert" style="padding-left:0!important;"><%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
      </div>
  <% end %>
</div>
<!-- /.row -->

<div class="row">
  <%= form_tag search_update_path, {method: 'put', class: 'form-horizontal'} do %>
      <div class="col-lg-6">
        <% i = 0 %>
        <% @Search.attributes.each do |name, value| %>
            <% puts name.to_s + '-'+ value.class.to_s %>
            <% i += 1 %>
            <% next if i%2 == 0 %>
            <% next if @SkipColumns.include?(name) %>
            <div class="form-group">
              <%= label_tag name, nil, class: 'col-md-4 control-label' %>
              <div class="col-md-6">
                <%= text_field_tag name, value, class: 'form-control' %>
              </div>
            </div>
            <!-- /.form-group -->
        <% end %>
        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= submit_tag 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
        <!-- /.form-group -->
      </div>
      <!-- /.col-lg-6 -->
      <div class="col-lg-6">
        <% i = 0 %>
        <% @Search.attributes.each do |name, value| %>
            <% i +=1 %>
            <% next if i%2 == 1 %>
            <% next if @SkipColumns.include?(name) %>
            <div class="form-group">
              <%= label_tag name, nil, class: 'col-md-4 control-label' %>
              <div class="col-md-6">
                <%= text_field_tag name, value, class: 'form-control' %>
              </div>
            </div>
            <!-- /.form-group -->
        <% end %>
      </div>
      <!-- /.col-lg-6 -->
  <% end %>
  <!-- /form -->
</div>
<!-- /.row -->

