<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Edit threat</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissible" role="alert" style="padding-left:0!important;"><%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
      </div>
  <% end %>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-6">
      <%= form_tag search_update_path, { method: 'put', class: 'form-horizontal' }  do %>
          <% @Search.attributes.each do |name, value| %>
            <% next if @SkipColumns.include?(name) %>
              <div class="form-group">
                <%= label_tag name, nil, class: 'col-sm-2 control-label'%>
                <div class="col-sm-10">
                  <%= text_field_tag name, value, class: 'form-control' %>
                </div>
              </div>
              <!-- /.form-group -->
          <% end %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= submit_tag 'Submit', class: 'btn btn-primary' %>
            </div>
          </div>
          <!-- /.form-group -->
      <% end %>
      <!-- /form -->
  </div>
  <!-- /.col-lg-6 -->
  <div class="col-lg-6">
  </div>
  <!-- /.col-lg-6 -->
</div>
<!-- /.row -->

