<div class="container-fluid">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col-lg-12">
      <h1 class="page-header">Threat records</h1>
    </div>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> alert-dismissible" role="alert" style="padding-left:0!important;"><%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
        </div>
    <% end %>
  </div>

<% if @Search && @Search.length > 0 %>
  <div class="row-fluid">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body" style="overflow-x: scroll;">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <% puts '------------------------------------------------------------------' %>
              <% puts edit_search_path(@Search.first) %>
              <% puts '------------------------------------------------------------------' %>
              <% @Search.first.attributes.each do |name, value| %>
                  <% next if name == :created_at || name == :updated_at %>
                  <% next if current_user && !current_user.is_admin && @SkipColumns.include?(name) %>
                  <th class="<%= name %>" data-name="<%= name %>" data-data="<%= name %>" data-orderable="<%= name != :threat_id %>" ><%= t(name) %></th>
              <% end %>
              <% if current_user && current_user.is_admin %>
                  <th class="edit-button" data-data="edit-button" data-name="edit-button" data-searchable="false" data-orderable="false"></th>
                  <th class="delete-button" data-data="delete-button" data-name="delete-button" data-searchable="false" data-orderable="false"></th>
              <% end %>
            </tr>
            </thead>
          </table>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<% end %>