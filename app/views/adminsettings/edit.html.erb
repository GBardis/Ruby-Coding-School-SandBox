<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Visible Columns
      </div>
      <div class="panel-body">

        <%= form_for @setting do |setting| %>
            <div class="form-group">
              <%= setting.select :preferences, options_for_select(@available_columns, @setting.preferences),
                                 { include_hidden: false },
                                 { class: 'admin-select form-control', multiple: true, size: @available_columns.length } %>
            </div>
            <div class="form-group">
              <div class="col-md-offset-8 col-md-4">
                <%= setting.submit 'Submit', class: 'btn btn-primary btn-block' %>
              </div>
            </div>
            <!-- /.form-group -->
        <% end %>
      </div>
    </div>
  </div>
</div>

